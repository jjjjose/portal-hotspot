---
interface Props {
  text?: string;
  image?: string;
  size?: "sm" | "md" | "lg";
}

const { text, image, size = "md" } = Astro.props;

const sizeClasses = {
  sm: "h-10 text-lg px-3",
  md: "h-16 text-4xl px-5",
  lg: "h-24 text-6xl px-7",
};

const isImage = image && !text;
---

<div class="mb-3 flex justify-center">
  <div
    class:list={[
      "group relative flex items-center justify-center rounded-2xl shadow-lg transition-all duration-300 ease-out hover:scale-105 hover:shadow-xl",
      isImage ? "overflow-hidden" : "overflow-visible",
      sizeClasses[size],
      !isImage &&
        "bg-linear-to-br from-primary-500 via-primary-600 to-primary-700",
    ]}
    style="contain: paint layout;"
  >
    <!-- Orbiting particles (Restored & Optimized) -->
    {
      !isImage && (
        <div class="absolute inset-0 overflow-hidden rounded-2xl pointer-events-none">
          <div class="orbit orbit-1 transform-gpu" />
          <div class="orbit orbit-2 transform-gpu" />
        </div>
      )
    }

    <!-- Subtle gradient overlay -->
    {
      !isImage && (
        <div class="absolute inset-0 bg-linear-to-tr from-white/10 to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-20" />
      )
    }

    <!-- Content -->
    <div class="relative z-10 flex h-full w-full items-center justify-center">
      {
        isImage && image ? (
          <img
            src={image}
            alt="Logo"
            loading="eager"
            decoding="async"
            class="h-full w-full object-contain transition-transform duration-500 group-hover:scale-110 animate-image-pulse transform-gpu drop-shadow-[0_0_2px_rgba(255,255,255,0.95)]"
          />
        ) : text ? (
          <div
            class="font-black tracking-tighter text-white drop-shadow-md transition-transform duration-300 group-hover:scale-105 animate-text-float transform-gpu"
            style={{
              fontFamily: "'Segoe UI', 'Helvetica Neue', sans-serif",
              textShadow: "0 2px 10px rgba(0,0,0,0.2)",
            }}
          >
            {text}
          </div>
        ) : (
          <span class="text-5xl drop-shadow-xl transition-transform duration-300 group-hover:rotate-6 group-hover:scale-110 animate-emoji-bounce transform-gpu">
            ðŸ“¡
          </span>
        )
      }
    </div>

    <!-- Shine effect -->
    {
      !isImage && (
        <div class="absolute inset-0 -translate-x-full bg-linear-to-r from-transparent via-white/20 to-transparent transition-transform duration-700 group-hover:translate-x-full pointer-events-none transform-gpu" />
      )
    }
  </div>
</div>

<style>
  /* Optimized Animations using transform/opacity only for performance */

  .orbit {
    position: absolute;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    will-change: transform;
  }

  .orbit-1 {
    width: 140%;
    height: 140%;
    animation: spin 10s linear infinite;
  }

  .orbit-2 {
    width: 170%;
    height: 170%;
    animation: spin 15s linear infinite reverse;
    opacity: 0.6;
  }

  @keyframes spin {
    to {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-2px);
    }
  }

  .animate-text-float {
    animation: float 3s ease-in-out infinite;
    will-change: transform;
  }

  @keyframes bounce-gentle {
    0%,
    100% {
      transform: scale(1) rotate(0deg);
    }
    50% {
      transform: scale(1.1) rotate(5deg);
    }
  }

  .animate-emoji-bounce {
    animation: bounce-gentle 2.5s ease-in-out infinite;
    will-change: transform;
  }

  @keyframes pulse-opacity {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.9;
    }
  }

  .animate-image-pulse {
    animation: pulse-opacity 3s ease-in-out infinite;
    will-change: opacity;
  }

  @media (prefers-reduced-motion: reduce) {
    .orbit,
    .animate-text-float,
    .animate-emoji-bounce,
    .animate-image-pulse {
      animation: none;
    }
  }
</style>
