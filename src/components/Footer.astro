const hrefMap = {
  email: (v: string) => `mailto:${v}`,
  whatsapp: (v: string) => `https://wa.me/${v}`,
  phone: (v: string) => `tel:${v}`,
};
---

<div
  class="mt-3 rounded-lg p-2 transition-colors"
  style="background-color: var(--bg-secondary); border: 1px solid var(--primary-500); border-opacity: 0.3;"
>
  <div class="space-y-1.5">
    <!-- Header -->
    <h3
      class="text-xs font-bold transition-colors"
      style="color: var(--primary-500);"
    >
      Contactos
    </h3>

    <!-- Contacts List -->
    <div class="space-y-1">
      {
        contactos.map((contact) => (
          <div
            class="flex items-center gap-2 rounded p-1.5"
            style="background-color: var(--primary-100);"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="h-3 w-3"
              style="color: var(--primary-700);"
              set:html={iconMap[contact.type as keyof typeof iconMap]}
            />
            <a
              href={hrefMap[contact.type as keyof typeof hrefMap](
                contact.value
              )}
              class="text-xs font-semibold transition-colors hover:opacity-70"
              style="color: var(--primary-700);"
              target={contact.type === "whatsapp" ? "_blank" : undefined}
              rel={
                contact.type === "whatsapp" ? "noopener noreferrer" : undefined
              }
            >
              {contact.value}
            </a>
          </div>
        ))
      }
    </div>
  </div>
</div>
