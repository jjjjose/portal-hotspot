<div
  id="loader-overlay"
  class="fixed inset-0 items-center justify-center bg-black/40 backdrop-blur-sm z-50 transition-all duration-300 hidden"
  style="display: none;"
>
  <div class="flex flex-col items-center gap-4">
    <!-- Animated Spinner -->
    <div id="spinner" class="relative w-16 h-16">
      <div
        class="absolute inset-0 rounded-full border-4 border-transparent"
        style="border-top-color: var(--primary-500); animation: spin 1.5s linear infinite;"
      ></div>
      <div
        class="absolute inset-2 rounded-full border-4 border-transparent"
        style="border-right-color: var(--primary-300); animation: spin 2s linear infinite reverse;"
      ></div>
      <div
        class="absolute inset-4 rounded-full border-2 border-transparent"
        style="border-bottom-color: var(--primary-600); animation: spin 1s linear infinite;"
      ></div>
    </div>

    <!-- Loading Text -->
    <p
      class="text-sm font-medium"
      style="color: var(--text); animation: pulse 2s ease-in-out infinite;"
    >
      Procesando...
    </p>
  </div>
</div>

<style>
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  #loader-overlay.show {
    display: flex !important;
    opacity: 1;
  }

  #loader-overlay.hidden {
    display: none !important;
    opacity: 0;
  }
</style>
